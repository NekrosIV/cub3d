NAME := cub3d
CC := cc
CFLAGS := -Wall -Wextra -Werror -g3 -MMD
MLX_FLAGS = -Lmlx -lmlx -Imlx -lXext -lX11 -lm
LIBFTDIR := ./libft
MLXDIR := ./mlx

FILES := cub3d.c \
		parsing/parsing.c \
		error/exit.c \
		utils.c

SRCS_DIR := ./src
OBJS_DIR := ./poubelle

SRCS := $(addprefix $(SRCS_DIR)/, $(FILES)) 
OBJS := $(addprefix $(OBJS_DIR)/, $(FILES:.c=.o))
DEPS := $(OBJS:.o=.d)

HEADERS := ./include

# COLOR #
GREEN	:= \033[38;5;76m
RED		:= \033[38;5;160m
YELLOW	:= \033[38;5;226m
ORANGE	:= \033[38;5;202m
PURPLE	:= \033[38;5;213m
LBLUE	:= \033[38;5;51m
BLUE	:= \033[38;5;117m
INDI	:= \033[38;5;99m
RESET	:= \033[00m

OBJ_SUBDIRS := $(sort $(dir $(OBJS)))

all: $(NAME)

$(NAME): $(OBJS)
	@make --silent -C ${LIBFTDIR}
	@make --silent -C ${MLXDIR}
	@$(CC) $(CFLAGS) -I$(HEADERS) -o $@ $(OBJS) ${MLX_FLAGS} -L ${LIBFTDIR} -lft
	@printf "$(RESET)\n\n\n"
	@printf "⠀⠀$(YELLOW)⢀⠂⠘⠀⠱⠈⡝⣏⠐⠀⠑⠒⠤⣼⢶⠁⣠⠀⠠$(PURPLE)⠀⠀⠀⠀⢸⠍⣎⢙⣿⣿⢿⡁⠤⠀⠀⠀⠀⠀⣠⣾⣿⣿⣿⣿⣿⣿⣿⣿⣷⣦⣄⡀⠀$(RED)⠀⠀⠀⠀⠀⠀⠄⣡⠀⠈⠒⠄⢄⠀⠀⠀⠐$(PURPLE)⣫⡇⠀⠀⠀⠀⠀⠀⠀⠀⠈⠙⠶⣷⣴⣥⣐⠘⢟⡟⡧⢛⣤⣳⣿⣿⠿⠟⠉⠀⠀⣰⡛⠄$(BLUE)⠀⠀⠀⠀⠀⠀⠈⢿⣿⣿⡇⠒⡤$(RESET)\n"
	@printf "⠀$(YELLOW)⠀⡠⠒⠂⠡⠐⠁⡠⠠⢈⠍⠁⠀⠘⢟⢾⣿⣿⡀⠁$(PURPLE)⠀⠀⠀⠀⠘⢦⠰⣍⡻⣿⢀⢺⠁⠀⠀⠀⢀⣼⣿⣿⣿⣿⣿⣿⣿⣿⡿⣿⢹⣿⣿⣿⣆⡀$(RED)⠀⠀⠀⠀⢠⢚⡤⡸⢊⣀⢨⣌⠀⠀⠀⢚$(PURPLE)⡿⠀⡰⠀⡀⡀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠁⠉⠛⠊⢀⠔⠿⠿⠋⠉⠀⠀⠀⠀⠀⣸⣿⣯$(BLUE)⠀⢀⡠⠶⣀⠀⠀⠀⠘⣿⡅⠈⠌⠋$(RESET)\n"
	@printf "⠀$(YELLOW)⠈⡄⠀⠀⠆⠈⢐⠡⠀⠀⠀⢀⣐⡁⠐⠉⡛⡛⠹⠈⢄⠀$(PURPLE)⠀⠀⠀⢿⡂⢿⣿⣮⠸⡇⠀⠀⠀⠀⢰⣿⣿⣿⣿⣿⣛⠛⠿⣿⣶⡶⢬⣉⣿⣿⣿⡥$(RED)⠀⠀⠀⠀⠢⠋⡠⢴⣋⢆⠁⠈⠁⡀⢰$(PURPLE)⣿⠁⢠⠁⢸⡗⠀⠁⢢⡄⢀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⢀⡽⣿⣿$(BLUE)⢲⠟⠨⠽⣛⣤⠀⠈⠀⣥⣰⡆⣄⣂$(RESET)\n"
	@printf "⠀$(YELLOW)⠀⠀⠀⠁⠂⠀⠀⢃⣠⣾⣿⣿⣿⣿⡀⠀⠁⠈⠀⢀⠨⡀$(PURPLE)⠀⢀⡳⠵⣥⡘⢿⣯⠳⡀⣀⠀⠀⢠⣿⣿⣿⠡⣶⠂⢉⡐⡠⠄⡙⣿⣼⡿⠿⠿⣟⢾$(RED)⠀⠀⠀⠀⠈⢠⡍⣤⢭⣤⣬⢀⠀⠀⠢$(PURPLE)⠈⠀⠎⠀⣈⠁⠀⠀⠛⠃⠀⠈⣠⡄⡄⢠⣐⢠⣴⣷⣾⣄⢆⡠⠀⠄⢀⠀⠀⢀⠎⡽⣿⣿⠇$(BLUE)⠶⣤⣾⣿⣿⡆⢀⠀⣿⣿⣿⣷⡇$(RESET)\n"
	@printf "⠀⠀⠀⠀$(YELLOW)⢰⣶⣶⣶⣿⣿⣿⣿⡿⠿⠿⢷⣤⣄⠀⢀⠠⠚⢱$(PURPLE)⣶⢮⣥⢄⣬⠝⢷⣝⠃⢂⠌⠻⣄⣾⣿⣿⣿⣧⣬⣤⣤⣜⣹⣾⣿⣿⠉⠀⠀⠐⢢⡝⡐$(RED)⠀⢀⠀⡡⡀⢃⣶⣶⣶⣯⡜⠁⠀$(PURPLE)⡟⠀⠘⠀⡀⣈⠀⠀⢰⡇⠠⣀⣀$(RESET)⢟⠵⣚⣭⣴⣿⣿⣶⣶⣆⡤⢆⣉⢁⠐⠪⢐$(PURPLE)⠻⣆⠹⠝$(BLUE)⡁⠠⠈⠁⠀⣹⡿⠁⢸⣦⠘⢟⢣⠤⠈$(RESET)\n"
	@printf "⠀$(YELLOW)⠀⠌⡧⢘⣿⣿⣿⣿⣿⣿⢿⣾⣿⣿⣿⢿⣿⡆$(PURPLE)⣮⣀⠈⢐⡪⢦⡄⠈⠗⢠⣷⣍⠂⡿⠰⠂⣽⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣟⢠⡀⠈⠽⡀⠀⣠⡴⠃$(RED)⠀⢑⡄⣒⠐⠒⠂⠭⢑⠀$(PURPLE)⣴⠇⠀⣶⠀⠀⠩⠒$(RESET)⣰⣵⣿⣿⣯⡝⡵⢟⣻⣿⣿⣿⣿⣿⣿⣟⡻⢿⣾⣽⣖⡥⣺⢿⣮⣕⡆$(BLUE)⣷⠀⠀⢀⠺⠟⠀⣠⠼⣫⣴⠆⠀⠂⠄$(RESET)\n"
	@printf "⠀⠀$(YELLOW)⠼⡓⡀⣌⠛⢿⣿⣿⣧⢊⡾⣟⠩⣢⣿⣿⡿$(PURPLE)⢘⣟⠃⠨⠀⠋⢥⡜⠿⠿⣿⡟⠂⠑⢄⣀⢹⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⡿⣿⡿⠃⣿⣿⣟⠃⡜⠉⢔⣡⣶⡿$(RED)⠐⠡⢣⠒⠜⠦⠀$(PURPLE)⢸⡏⠀⠀⣋⡀⠀$(RESET)⢖⢿⣿⣿⡿⠳⠶⢠⣾⢿⣿⣿⣿⣿⣿⣿⣿⣿⢿⡻⣾⣽⡻⣿⣶⣥⡚⣙⠢$(BLUE)⠿⠇⣀⣀⡈⠰⠂⠲⣿⣿⡿⠁⠀⠀⠀$(RESET)\n"
	@printf "⠀⠀$(YELLOW)⠠⢡⠱⣄⠛⢗⢹⣿⣷⣷⣾⣿⡏⠻⣿⣿⣿$(PURPLE)⠂⠩⡔⣠⡦⢚⣵⣶⣽⡆⣹⡟⠀⠀⠀⠧⠈⢿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣋⠤⣜⢿⣻⡞⠀⢀⣼⣿⣿⡟⠁$(RED)⠀⠀⡀⠀⠀$(PURPLE)⣀⣤⣾⠀⠀⠀⠹⢃⢆$(RESET)⣵⡿⣫⣶⣾⣭⢋⢉⣾⣿⣿⣿⣿⣿⣛⠿⣿⣿⣿⣶⣼⡛⢿⣷⣭⡻⢯⡒⢝⠿⠆$(BLUE)⠀⠀⢁⡄⠀⢰⣝⡛⠀⠀⠀⠀⠀$(RESET)\n"
	@printf "⠀⠀$(YELLOW)⢐⡠⢿⣿⡆⠘⢻⣿⣿⣿⣿⣿⣿⣀⣽⣿⣿⣇$(PURPLE)⢀⠄⢿⡡⢾⣿⣝⣿⡇⣤⠠⠁⠀⠀⠇⠀⢸⣿⣿⣿⣿⣿⣿⡿⠿⠿⣭⡐⠻⣜⣯⡟⠀⣠⠟⣽⢫⢃⣠⣤⣶⠟$(PURPLE)⠀⠀⠠⠿⣿⡃$(RESET)⠀⠀⠀⠰⢋⣾⡷⢢⡿⣿⣿⡿⢠⣾⣿⣿⣿⣿⣿⣿⣿⣿⣶⣄⡛⣿⣽⢿⣷⣤⡠⣍⡛⠚⠥⠈⠈⠢⠀$(BLUE)⠿⣀⠆⣪⡶⠁⠀⠀⠀⠀⠀\n"
	@printf "⠀⠀$(YELLOW)⠰⡜⣄⠢⢍⠀⣼⣿⡿⣿⣿⣿⣿⢟⣽⣝⠻⣃$(PURPLE)⣀⡙⠶⣝⣂⠉⠛⢿⣧⢿⡀⠀⠀⠀⠀⡄⠀⠙⠿⣿⣿⣿⣿⣷⡲⡰⢤⡬⣗⣿⠊⠀⡰⢥⠛$(YELLOW)⣈⢤⣭⣅⡲⢔⠄⡀$(PURPLE)⠀⠀⠀⠀⠉⠲⣦$(RESET)⣔⣜⣾⣻⣱⡿⣹⣿⣿⡷⣸⣿⣿⣿⠿⣿⣿⣝⡻⣮⣻⣿⣿⣮⡛⠿⣿⣝⢿⣦⡙⢦⢈⠛⢧⣢$(BLUE)⡹⡏⠀⢰⡿⠁⠀⠀⠀⠀⠀⠀$(RESET)\n"
	@printf "⠀⠀⠀$(YELLOW)⢡⠂⡍⢢⣦⢩⡑⢐⠛⠫⠽⣢⣯⣝⢟⣡$(PURPLE)⣤⣬⣭⣿⣿⣮⣗⡠⣂⠹⣞⣿⡈⠄⠀⢰⣧⣃⠐⣀⠈⠻⣿⣿⣿⣷⣙⣧⢻⠝⠀⠀⢌⠑⡂$(YELLOW)⣨⣙⡛⡔⠢⡙⡌⠇⠁⡤$(RESET)⠀⠀⠀⠀⠀⢨⢎⣞⡏⣿⣸⣡⡿⡟⣿⣧⣙⣿⣿⠿⣿⣮⡛⣿⣿⣮⡻⣷⣽⡙⠿⣧⡈⠙⢧⠈⠛⢦⠻⣕⢤⡁⠹$(BLUE)⡜⡄⠘$(RESET)⠀⠀⠀⠀⠀⠀⠀⠀\n"
	@printf "⠀⠀$(YELLOW)⡀⠡⠈⢄⢫⡿⠋⣠⣾⣿⣿⣶⡿⣹⠋$(PURPLE)⠀⡝⠿⣿⣿⡿⣿⣿⣿⣿⣾⣶⣜⣿⣧⠁⠀⠀⠉⠻⠄⠲⢢⠄⠈⠙⠟⣶⡹⠎⠁⠀⠀⠈⠀⣴⡇$(YELLOW)⣟⢭⠁⢨⣵⣶⣶⣾⣇$(RESET)⠀⠀⠐⢢⠈⡗⠎⣼⢻⢹⣟⣿⢿⣷⡇⡟⢿⣧⢘⣿⣎⢮⡻⣿⣶⣍⢻⣿⣶⡙⢷⣄⠈⠛⢆⠀⠑⢤⣀⠑⠙⢮⣻⣄⢻⠁⠀⠀⠀⠀⠀⠀⠀⠀⠀\n"
